<h1><%= @post.title %></h1>
<h3><%= @post.body %></h3>

<% if current_user != nil && current_user.admin %>
  <%= link_to "Edit Post", edit_user_post_path(@user, @post) %>
  <%= link_to "Delete Post", user_post_path(@user, @post), data: {method: 'delete', confirm:'are you sure?'} %>
<% end %>

<%= link_to "Add Comment", new_post_comment_path(@post), id:"add_comment_link", remote: true %>

<br />

<ul id="comments_list">
<%= render(@comments) %>
</ul>
