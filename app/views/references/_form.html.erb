<%= render 'layouts/errors', :object => @reference %>

<%= form_for [@user, @reference], remote: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit :class => "btn btn-success" %>
<% end %>
